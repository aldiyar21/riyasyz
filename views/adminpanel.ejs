   <title>Riyasyz.kz</title>
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
   <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightgallery-js/1.4.0/css/lightgallery.min.css">
   <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet"> <!-- animate on scroll biblioteka-->
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
   <link rel="stylesheet" href="css/style.css">
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
   <link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/heroes/">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css">
</head>
<body>

<!-- header-->
<section class="header">

   <a href="/" class="logo">
     <div class="logo-image">
       <img src="images/logohs.png" class="img-fluid" width="180" height="80"></div></a>
   <nav class="navbar">
      <a href="events">events</a>
      <a href="#gallery">gallery</a>
      <a href="#about">about us</a>
      <a href="#">contacts</a>
      <a href="registration">login</a>
   </nav>
   <div id="menu-btn" class="fas fa-bars"></div>
</section>

<center><h1 style="font-size:40px; margin-top: 2rem;">ADMIN PANEL</h1></center>
<center>
    <a href="/post"><button type="button" class="btn btn-success" style="font-size:40px; margin-top: 1rem; margin-bottom: 1rem; ">Add new event</button></a>
</center>

<section class="blogs" id="blogs">

   <div class="heading">
      <h3>Manage the events</h3>
   </div>


<%for(var i = data.length-1;i>=0;i--){%>
         <div class="swiper-slide slide">
            <div class="image">
               <img src="<%=data[i].urlToImage%>" alt="">
               <span><%=data[i].company%></span>
            </div>
            <div class="content">
               <div class="icon">
                  <a href="#"> <i class="fas fa-calendar"></i> <%=data[i].publishedAt%> </a>
                  <a href="#"> <i class="fas fa-calendar"></i> <%=data[i].date%> </a>
                  <a href="#"> <i class="fas fa-user"></i> by <%=data[i].author%> </a>
               </div>
               <a href="#" class="title"><%=data[i].title%></a>
               <p><%=data[i].description%></p>
               <a href="/readmore/<%=data[i]._id%>" class="btn">Read more</a>
               <form action="/cancel/<%=data[i]._id%>" method="POST">
          <center><button type="submit" class="btn btn-danger" style="font-size: 30px;">Delete event</button></center>
        </form>
            </div>
         </div>
   <%}%>

</section>




<script src="https://unpkg.com/swiper@7/swiper-bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/lightgallery-js/1.4.0/js/lightgallery.min.js"></script>
<script src="https://maps.api.2gis.ru/2.0/loader.js?pkg=full"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>
<!-- custom js file link  -->
<script src="js/script.js"></script>
</body>
</html>
